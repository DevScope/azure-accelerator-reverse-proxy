<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery.ui.theme.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>WebSite Manager</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div style="clear:both;"></div>

            @{
                var isEnabled = Microsoft.Samples.DPE.AzureMultiTenantApp.Web.Core.Services.SyncService.IsSyncEnabled();
                }
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Web Sites", "Index", "WebSite")</li>
                    <li>@Html.ActionLink((isEnabled ? "Disable Sync" : "Enable Sync"), "SyncChange", "Sync", new { enable = !isEnabled }, new { })</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
            @Html.Raw((!isEnabled ? "<br><div style='color:Red; font-weight:bold'>Synchronization is disabled. Enable Sync to resume site synchronization between role instances.</div>" : string.Empty))
        </footer>
    </div>
</body>
</html>